
= simple_form_for @edition, html: {class: 'well form-horizontal'} do |f|

  = f.input :title, prompt: "Input title"
  = f.input :description, input_html: {rows: 3, maxlength: 400, class: 'markitup'}
  = f.input :price, input_html: {step: 0.1, max: 2000, min: 0}
  = f.input :image
  = f.association :kinds
  - if @edition.image?
    .control-group
      %label.control-label Current image
      .controls= image_tag @edition.image.url(:medium)
  .form-actions
    = f.submit 'Save', class: 'btn btn-success'
    = f.submit "Reset", type: :reset, class: 'btn btn-inverse'
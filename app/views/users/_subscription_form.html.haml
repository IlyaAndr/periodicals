= simple_form_for [@user, @subscription], :html => {:class => 'well form-horizontal' } do |f|

  = f.input :user_id, as: :hidden
  = f.input :start_date, as: :date, start_year: Date.today.year, end_year: Date.today.year+5, discard_day: true, order: [:month, :year]
  = f.input :end_date, as: :date, start_year: Date.today.year, end_year: Date.today.year+5, discard_day: true, order: [:month, :year]
  .form-actions
    = f.submit 'Save', class: 'btn btn-success'
    = f.submit "Reset", type: :reset, class: 'btn btn-inverse'
.row
  .span2  
  %h2 Edit account
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'well form-horizontal', :method => :put }) do |f|
    = devise_error_messages!
    = f.input :email
    = f.input :username
    = f.input :password
    = f.input :password_confirmation, label: false
    - if @user.password_required?
      = f.input :current_password
    .form-actions
      = f.submit "Update", class: 'btn btn-success'
      = f.submit "Reset", type: :reset, class: 'btn btn-inverse'
  .span1  
  %p
    Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.
  .span1  
  = link_to "Back", :back
  %h2 Sign up
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'well form-horizontal' }) do |f|
    = f.input :email
    = f.input :username
    - if @user.password_required?
      = f.input :password
      = f.input :password_confirmation, label: false
    .form-actions
      = f.submit "Register", class: 'btn btn-success'
      = f.submit "Reset", type: :reset, class: 'btn btn-inverse'
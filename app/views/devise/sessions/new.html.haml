  %h2 Sign in
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'well form-horizontal' }) do |f|
    = f.input :login, label: 'Username or email'
    = f.input :password
    - if devise_mapping.rememberable?
      = f.input :remember_me, as: :boolean
    .form-actions
      = f.submit "Sign in", class: 'btn btn-success'
      = f.submit "Reset", type: :reset, class: 'btn btn-inverse'